{
  "env": {
      "browser": true,
      "es2021": true,
      "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:vue/essential"
  ],
  // "parserOptions": {
  //     "ecmaVersion": 12,
  //     "parser": "@typescript-eslint/parser",
  //     "sourceType": "module"
  // },
  // "plugins": [
  //     "vue",
  // ],
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "vue/html-self-closing": ["error", {
      "html": {
        "void": "always",
        "normal": "never",
        "component": "always"
      },
      "svg": "always",
      "math": "always"
    }]
  }
}
